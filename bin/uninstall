#!/bin/bash
#
#
###########################

PROJECT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"

sudo xdg-mime uninstall --mode system ${PROJECT_DIR}/resources/vnd.stitchworks.pattern.xml --novendor

sudo xdg-desktop-menu uninstall ${PROJECT_DIR}/resources/CrochetCharts.desktop --novendor

sudo xdg-mime default CrochetCharts.desktop applications/x-stitchworks-pattern

sudo xdg-icon-resource uninstall --context mimetype --size 128 ${PROJECT_DIR}/images/stitchworks-pattern.png x-stitchworks-pattern
